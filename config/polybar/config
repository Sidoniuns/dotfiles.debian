;------------------------------------------------------------------------------
;                                   DATE
;------------------------------------------------------------------------------
[module/date]
type = internal/date
interval = 5

date = " %H:%M"
date-alt = " %a, %d %b %Y"

format-prefix = 
format-foreground = ${colors.fg}
format-prefix-foreground = ${colors.fg}
